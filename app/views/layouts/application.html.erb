<!DOCTYPE html>
<html>
  <head>
    <title>MessageMe</title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui small inverted menu">
      <div class="ui container">
        <%= link_to 'login', root_path, class: 'item' %>
        <a class="item">
          Messages
        </a>
        <div class="right menu">
          <div class="ui simple dropdown item">
            Options <i class="dropdown icon"></i>
            <div class="menu">
              <% if !logged_in? %>
              <%= link_to 'login', login_path, class: 'item' %>
              <% else %>
              <%= link_to 'logout', logout_path, class: 'item', method: :delete %>
              <% end %>
            </div>
          </div>
          <% if !logged_in? %>
          <div class="item">
              <%= link_to 'login', login_path, class: 'ui primary button' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="ui container">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </body>
</html>
